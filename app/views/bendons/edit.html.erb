<%= form_for @bendon, :url => bendon_path(@bendon),:method=>:patch do |f| %>
    <%= f.label :store, "商店名稱" %>
    <%= f.text_field :name %>

    <%= f.label :address, "地址" %>
    <%= f.text_field :address %>

    <%= f.label :phone_number, "電話號碼" %>
    <%= f.text_field :phone_number %>

    <%= f.submit "更新" %>
<% end %>